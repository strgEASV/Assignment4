<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.assignment4.NumberConversionController">

    <children>
        <Label text="Welcome!" textFill="WHITE">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>

        <Label fx:id="label" maxWidth="500.0" text="Hello, Guest. Greetings from the top Java developer class in town" textAlignment="CENTER" textFill="WHITE" wrapText="true">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <Label text="Kilometers to Miles Converter" textFill="WHITE">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <TextField fx:id="txtNumberInput" maxWidth="300.0" promptText="Enter kilometers">
            <font>
                <Font size="14.0" />
            </font>
        </TextField>

        <Button fx:id="btnCalculate" onAction="#handleButtonAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 30;" text="Calculate!">
            <font>
                <Font size="16.0" />
            </font>
        </Button>

        <!-- Výsledek převodu -->
        <Label text="Result:" textFill="WHITE">
            <font>
                <Font size="20.0" />
            </font>
        </Label>

        <Label fx:id="lblResult" maxWidth="400.0" prefHeight="28.0" prefWidth="220.0" text="(result will appear here)" textFill="WHITE" wrapText="true">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
    </children>

    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
</VBox>
